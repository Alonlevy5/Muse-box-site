
@{ ViewData["Title"] = "Group";
    Layout = "_Layout"; }

@using Musebox_Web_Project.Controllers


@model List<Group<string, Product>>

@{
    ViewBag.Title = "LINQ Grouping";
}
<h2>Grouping Items by Type</h2>
<table class="table">
    <tbody>
        @foreach (var group in Model)
        {
            <tr><th colspan="3" style=" font-size:20px; ">@group.Key</th></tr>
            <tr><th>Brand</th><th style="padding-left:90px">Product Name</th></tr>

            foreach (var Product in group.Values)
            {
                <tr><td>@Product.ProductType</td><td style="padding-left:100px">@Product.ProductName</td><td></tr>
            }
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<style>
    table {
        border-collapse: collapse;
        width: 100%;
        background-color: #f8f8f8;
        border: 1.5px solid black;
    }
</style>

